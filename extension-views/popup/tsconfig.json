{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": ["es5", "es6", "es7", "es2017", "dom", "esNext"],
    "module": "esNext",
    "moduleResolution": "node",
    "strict": true,
    "target": "ES2015",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}