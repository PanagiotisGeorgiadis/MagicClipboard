{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["es5", "es6", "es7", "es2017", "dom", "esNext"],
    "outDir": "./dist/",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}